extends ../base

block content 
    if errorMessage 
        span=errorMessage
    form(method="post" ,enctype ="multipart/form-data")
        input(type="password" required , placeholder="Old Password" ,name="oldPassword")
        input(type="password" required , placeholder="New Password", name="newPassword")
        input(type="password" required , placeholder="New Password Confirm" , name="newPasswordConfirmation")
        input(type="submit" required , value="Change Password")
