extends base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST" ,enctype ="multipart/form-data")
        label(for="video") Video
        input(type="file" , accept="video/*" , required, id="video" , name="video")
        label(for="thumb") Thumb
        input(type="file" , accept="image/*" , id="thumb" , name="thumb")
        input(type="text", name="title", placeholder="Title", required, maxlenght=100)
        input(type="text", name="description", placeholder="Description", required, maxlenght=100)
        input(type="text", name="hashtags", placeholder="Hashtags, separated by comma.", )
        input(type="submit", value="Upload Video", required).submit-button
block scripts 
    script(src="/static/js/recorder.js")

