doctype html 
html(lang="ko")
    head    
        title #{pageTitle} | WebTube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body    
        header
            h1=pageTitle
            nav 
                ul 
                    li 
                        a(href="/") #{pageTitle!="Home" ? "Home" : ""} 
                    li 
                        a(href="/search") #{pageTitle==="Home" ? "Search" : ""} 
                    
                    if !loggedIn
                        li 
                            a(href="/join") #{pageTitle==="Home" ? "Join" : ""} 
                        li 
                            a(href="/login") #{pageTitle==="Home" ? "Log in" : ""} 
                    else 
                        li 
                            a(href="/users/edit") Edit Profile
                        li 
                            a(href="/videos/upload") #{pageTitle==="Home" ? "Upload Video" : ""}
                        li 
                            a(href="/users/logout") Log out 
        main
            block content
                
        include partials/footer.pug